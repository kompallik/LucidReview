# LucidReview Production Environment Variables
# Copy to .env and fill in real values — NEVER commit .env to version control

# ── Security ─────────────────────────────────────────────────────────────────
JWT_SECRET=<generate with: openssl rand -base64 48>
MYSQL_ROOT_PASSWORD=<strong-random-password>
REDIS_PASSWORD=<strong-random-password>

# ── AWS / Bedrock ─────────────────────────────────────────────────────────────
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=<your-access-key>
AWS_SECRET_ACCESS_KEY=<your-secret-key>
BEDROCK_MODEL_ID=us.anthropic.claude-sonnet-4-6

# ── Application ───────────────────────────────────────────────────────────────
CORS_ORIGINS=https://your-domain.com
PORT=3000
LOG_LEVEL=warn

# ── UM System Integration ─────────────────────────────────────────────────────
UM_SYSTEM_BASE_URL=https://your-um-system.com/api
UM_SYSTEM_API_KEY=<api-key>
UM_SYSTEM_TIMEOUT_MS=10000

# ── FHIR ─────────────────────────────────────────────────────────────────────
HAPI_FHIR_URL=http://hapi-fhir:8080/fhir

# ── Redis ─────────────────────────────────────────────────────────────────────
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379
